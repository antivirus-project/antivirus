<Window x:Class="AntivirusApp.AftercareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:AntivirusApp"
        
        Title="Aftercare Window" Height="600" Width="600">
    
    <Grid Background="#FFDDF2F8">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="🌈 Aftercare " HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#FF4D4D4D" Margin="0,0,0,30" />
            <TextBlock x:Name="done" Text="모든 악성파일 삭제 완료 !" FontWeight="Bold" HorizontalAlignment="Center" FontSize="18" Margin="0,10,0,25" />
            <TextBlock x:Name="caredFiles" Text="삭제한 악성 파일 수: " FontSize="14" Margin="0,5,10,20"/>
            <Button Content="🏡 홈으로 돌아가기" Width="150" Height="40" FontSize="14" Margin="0,15,0,0" Background="#FF78C7D3" Foreground="White" BorderBrush="#FF78C7D3" Click="GGoHomeButton_Click"/>

        </StackPanel>
    </Grid>
</Window>